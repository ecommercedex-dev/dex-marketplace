# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dex_db"

# JWT
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Server
NODE_ENV="production"
PORT=5000
FRONTEND_URL="https://yourdomain.com"

# Email Service
EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"

# Monitoring
LOG_LEVEL="error"